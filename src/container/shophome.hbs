<main>


    {{#with newsBlock}}
    <div class="row my-5">
        <h2 class="text-center mb-3">{{title}}</h2>
        {{#each cards}}
        <div class="col-3">
            <div class="card text-bg-dark mb-3">
                <div class="card-body">
                    <h6 class="card-title">
                        {{title}}
                        {{#if isNew}}
                        <span class="badge text-bg-success ms-1">New</span>
                        {{/if}}
                        {{#if isTop}}
                        <span class="badge text-bg-danger ms-1">Top</span>
                        {{/if}}
                    </h6>
                    <p>{{description}}</p>
                </div>

            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}

    <hr class="my-5">

    {{#with goodsBlock}}
    <div class="nav nav-tabs mb-5">
        {{#each tabs}}
        <div class="nav-item">
            <div class="nav-link {{#if isActive}} active {{/if}} {{#if isDisabled}} disabled {{/if}}">{{text}}</div>
        </div>
        {{/each}}
    </div>


    <div class="row">
        {{#each cards}}
        <div class="col-4">
            <div class="card mb-4">
                <img class="card-img-top" src="{{image}}">
                <div class="card-body">
                    <h6 class="card-title">
                        {{title}}
                        {{#if isHot}}
                        <span class="badge text-bg-warning text-uppercase ms-1">hot!</span>
                        {{/if}}
                        {{#if isNew}}
                        <span class="badge text-bg-primary ms-1">New</span>
                        {{/if}}
                    </h6>
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    {{/with}}

    <hr class="my-5">

    {{#with subscribe}}
    <div class="card text-bg-dark">
        <div class="card-body">
            <h2 class="mb-4">{{header}}</h2>
            <div>{{description}}</div>
            {{#each buttons}}
            <div>
                <a class="btn btn-primary mt-3" href="{{link}}" target="_blank">{{text}}</a>
            </div>
            {{/each}}
        </div>
    </div>
    {{/with}}

    <hr class="my-5">

    {{#with service}}
    <div class="card text-bg-success text-center">
        <div class="card-body">
            <h2 class="mb-4">{{title}}</h2>
            <div>{{description}}</div>
            {{#each buttons}}
            <div>
                <a class="btn btn-primary mt-3" href="{{link}}" target="_blank">{{text}}</a>
            </div>
            {{/each}}
        </div>
    </div>
    {{/with}}





</main>