{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{>title big=true data='My Educations:'}}
            <ul>
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd}}
                    (ще в процесі)
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{>title big=false data='My Certificates:'}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}}
                    (ID: {{id}})
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>

